        .container {
            margin-top: 40px;
            margin-bottom: 40px;
        }
        
        .display-4 {
            color: #5bb2e1;
        }
        
        .dropdown-item {
            color: #333;
            background-color: #6c757d;
            background-image: linear-gradient(to bottom right, #5bb2e1, #5193da);
            border-radius: 5px;
        }
        
        .dropdown-item:hover {
            color: #fff;
