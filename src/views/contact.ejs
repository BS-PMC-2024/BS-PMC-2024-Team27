<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Contacts</title>
    <style>
        /* Global Styles */
        
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: #f0f0f0;
            background: linear-gradient(to bottom right, #001f3f, #5bb2e1);
        }
        
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }
        /* Navbar Styles */
        
        .navbar {
            background-color: #333;
            overflow: hidden;
            padding: 10px 0;
        }
        
        .navbar-brand {
            float: left;
            color: #f4f4f4;
            font-size: 24px;
            text-decoration: none;
            padding: 10px 20px;
        }
        
        .navbar-brand:hover {
            background-color: #444;
        }
        
        .profile-button {
            float: right;
            color: #f4f4f4;
            text-decoration: none;
            padding: 10px 20px;
        }
        
        .profile-button:hover {
            background-color: #444;
        }
        /* Page Title */
        
        h1 {
            text-align: center;
            color: #333;
            margin-top: 20px;
        }
        /* Table Styles */
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }
        
        th,
        td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }
        
        th {
            background-color: #333;
            color: #fff;
            text-transform: uppercase;
        }
        
        tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }
        
        tbody tr:nth-child(even) {
            background-color: #ffffff;
        }
        
        tbody tr:hover {
            background-color: #e9ecef;
        }
        /* Dropdown Style */
        
        .filter-dropdown {
            margin-bottom: 10px;
            width: 100%;
            max-width: 200px;
            padding: 10px;
            font-size: 16px;
        }
        /* Button Style (optional) */
        
        .apply-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            margin-top: 10px;
            cursor: pointer;
        }
        
        .apply-button:hover {
            background-color: #0056b3;
        }
        /* Action Buttons */
        
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        
        .action-button {
            padding: 5px 10px;
            cursor: pointer;
            border: none;
            border-radius: 3px;
        }
        
        .delete-button {
            background-color: #ff4d4d;
            color: white;
        }
        
        .send-message-button {
            background-color: #4CAF50;
            color: white;
        }
        /* Modal Styles */
        
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.4);
            padding-top: 60px;
        }
        
        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }
        
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <a href="#" class="navbar-brand">Code Partner</a>
        <a href="Admin-Profile" class="profile-button">Profile</a>
    </div>

    <div class="container">
        <h1>Contacts</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                <% users.forEach(user => { %>
                    <tr>
                        <td>
                            <%= user.Name %>
                        </td>
                        <td>
                            <%= user.Email %>
                        </td>
                        <td>
                            <%= user.Message %>
                        </td>
                        <td class="action-buttons">
                            <button class="action-button delete-button" onclick="deleteMessage('<%= user._id %>')">Delete</button>
                            <button class="action-button send-message-button" onclick="openModal('<%= user.Email %>', '<%= user.Message %>')">Send Message</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <!-- The Modal -->
    <div id="messageModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Send Message</h2>
            <form id="messageForm" onsubmit="submitForm(event)">
                <input type="hidden" id="recipientEmail" name="email">
                <label for="messageContent">Message:</label><br>
                <textarea id="messageContent" name="message" rows="4" cols="50" required></textarea><br><br>
                <button type="submit" class="apply-button">Send</button>
            </form>
        </div>
    </div>

    <!-- JavaScript for actions -->
    <script>
        function openModal(email, message) {
            document.getElementById('recipientEmail').value = email;
            document.getElementById('messageContent').value = message;
            document.getElementById('messageModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('messageModal').style.display = 'none';
        }

        function submitForm(event) {
            event.preventDefault();
            const email = document.getElementById('recipientEmail').value;
            const message = document.getElementById('messageContent').value;

            fetch('/send-message', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        email,
                        message
                    }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Message sent successfully');
                        closeModal();
                    } else {
                        alert('Error sending message');
                    }
                });
        }

        function deleteMessage(id) {
            fetch(`/delete-message/${id}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting message');
                    }
                });
        }
    </script>
</body>

</html>