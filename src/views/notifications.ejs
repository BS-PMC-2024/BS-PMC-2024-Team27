<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users</title>
    <style>
        /* Global Styles */
        
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
        }
        
        body {
            /* font-size: 16px; */
            background-color: #001f3f;
            background: linear-gradient(to bottom right, #001f3f, #5bb2e1);
            /* display: flex; */
            flex-direction: column;
        }
        
        .container {
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        /* Navbar Styles */
        
        .navbar {
            background-color: #333;
            overflow: hidden;
            padding: 10px 0;
        }
        
        .navbar-brand {
            float: left;
            color: #f4f4f4;
            font-size: 24px;
            text-decoration: none;
            padding: 10px 20px;
        }
        
        .navbar-brand:hover {
            background-color: #444;
        }
        
        .profile-button {
            float: right;
            color: #f4f4f4;
            text-decoration: none;
            padding: 10px 20px;
        }
        
        .profile-button:hover {
            background-color: #444;
        }
        /* Page Title */
        
        h1 {
            text-align: center;
            color: #333;
            margin-top: 20px;
        }
        /* Table Styles */
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }
        
        th,
        td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }
        
        th {
            background-color: #333;
            color: #fff;
            text-transform: uppercase;
        }
        
        tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }
        
        tbody tr:nth-child(even) {
            background-color: #ffffff;
        }
        
        tbody tr:hover {
            background-color: #e9ecef;
        }
        /* Feedback Column */
        
        .feedback {
            width: 100%;
            word-wrap: break-word;
        }
        /* Button Styles */
        
        .delete-button {
            background-color: #dc3545;
            /* Red background */
            color: #fff;
            /* White text */
            border: none;
            border-radius: 4px;
            padding: 10px 15px;
            cursor: pointer;
        }
        
        .delete-button:hover {
            background-color: #c82333;
            /* Darker red on hover */
        }
    </style>
</head>

<body>
    <div class="navbar">
        <a href="#" class="navbar-brand">Code Partner</a>
        <a href="Admin-Profile" class="profile-button">Profile</a>
    </div>

    <div class="container">
        <h1>Notifications</h1>
        <table>
            <thead>
                <tr>
                    <th>Feedback</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                <!-- Example of dynamic data with server-side templating -->
                <!-- Replace <%= %> with actual template tags used in your server-side framework -->
                <% users.forEach(user => { %>
                    <tr>
                        <td class="feedback">
                            <%= user.feedback %>
                        </td>
                        <td>
                            <button class="delete-button" onclick="deleteMessage('<%= user._id %>')">Delete</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <script>
        function deleteMessage(id) {
            fetch(`/delete-message10/${id}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting message');
                    }
                });
        }
    </script>
</body>

</html>