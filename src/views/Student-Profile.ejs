<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile - Code Partner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.2.1/css/all.css">
    <style>
        body,
        h1,
        h2,
        h3,
        h4,
        h5 {
            font-family: "Poppins", sans-serif;
        }
        
        body {
            font-size: 16px;
            background-color: #001f3f;
            background: linear-gradient(to bottom right, #001f3f, #5bb2e1);
            margin-left: -40px;
        }
        
        .content {
            margin-top: 70px;
            padding: 20px;
            color: white;
        }
        
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #333;
            color: white;
            padding: 10px 0;
            z-index: 1000;
            display: flex;
            align-items: center;
        }
        
        .navbar h1 {
            margin-left: 20px;
            font-size: 24px;
            font-weight: bold;
        }
        
        .navbar a {
            margin: 0 10px;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            transition: background-color 0.3s ease;
        }
        
        .navbar a:hover {
            background-color: #495057;
            color: #00bfff;
        }
        
        .navbar-btn {
            border-color: #6c757d;
        }
        
        .btn-primary {
            background-color: #5bb2e1;
            border-color: #5bb2e1;
        }
        
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        
        .btn-danger {
            background-color: #5193da;
            border-color: #5bb2e1;
        }
        
        .btn-danger:hover {
            background-color: #5bb2e1;
            border-color: #5bb2e1;
        }
        
        .text-primary {
            color: #c8deea;
        }
        
        .container {
            margin-top: 40px;
            margin-bottom: 40px;
        }
        
        .display-4 {
            color: #5bb2e1;
        }
        
        .dropdown-item {
            color: #333;
            background-color: #6c757d;
            background-image: linear-gradient(to bottom right, #5bb2e1, #5193da);
            border-radius: 5px;
        }
        
        .dropdown-item:hover {
            color: #fff;
            background-color: #0056b3;
            background-image: none;
        }
        
        #chat-container {
            margin-top: 20px;
            background-color: #333;
            color: white;
            padding: 20px;
            border-radius: 5px;
        }
        
        #chat-display {
            max-height: 300px;
            overflow-y: auto;
        }
        
        .input-group {
            margin-top: 10px;
        }
        
        .input-group input[type="text"] {
            border-radius: 5px 0 0 5px;
        }
        
        .input-group button {
            border-radius: 0 5px 5px 0;
        }
        
        .message {
            background-color: #5bb2e1;
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            margin-bottom: 6px;
            max-width: 70%;
        }
        
        .message.ai {
            background-color: #5193da;
        }
        
        .message.user {
            background-color: #0056b3;
        }
        
        .rating {
            font-size: 24px;
            color: #ffd700;
        }
        
        .rating .star {
            cursor: pointer;
        }
    </style>
</head>

<body>

    <!-- Navbar/menu -->
    <nav class="navbar">
        <h1>Code Partner</h1>
        <div class="ms-auto d-flex align-items-center">
            <a href="view-project" class="navbar-btn">View List</a>
            <a href="add-req" class="navbar-btn">Add Requirements</a>
            <a href="/logout" class="navbar-btn btn btn-danger">Log Out</a>
            <!-- Log Out button -->
        </div>
    </nav>

    <!-- Content -->
    <div class="container">
        <div class="content">
            <h2>Welcome to Code Partner</h2>
            <p>This is a sample student profile page.</p>
        </div>

        <!-- Rating Section -->
        <div class="content mt-4">
            <h3>Rate our website:</h3>
            <div class="rating">
                <span class="star" data-value="1"><i class="fas fa-star"></i></span>
                <span class="star" data-value="2"><i class="fas fa-star"></i></span>
                <span class="star" data-value="3"><i class="fas fa-star"></i></span>
                <span class="star" data-value="4"><i class="fas fa-star"></i></span>
                <span class="star" data-value="5"><i class="fas fa-star"></i></span>
            </div>
        </div>

        <!-- Chatbot Interface -->
        <div id="chat-container" class="content mt-4">
            <div id="chat-display" class="mb-3">
                <!-- Chat messages will be displayed here -->
            </div>
            <div class="input-group">
                <input type="text" id="user-input" class="form-control" placeholder="Type your message...">
                <button id="send-btn" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        async function sendMessageToServer(message) {
            try {
                const response = await fetch('/api/chat', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        message
                    })
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const data = await response.json();
                return data.reply;
            } catch (error) {
                console.error('Error:', error);
                return 'An error occurred. Please try again later.';
            }
        }

        function appendMessage(from, message, className) {
            const chatDisplay = document.getElementById('chat-display');
            const messageElement = document.createElement('div');
            messageElement.classList.add('message', className);
            messageElement.innerHTML = `<strong>${from}:</strong> ${message}`;
            chatDisplay.appendChild(messageElement);
            chatDisplay.scrollTop = chatDisplay.scrollHeight;
        }

        async function handleUserInput() {
            const userInput = document.getElementById('user-input').value;
            appendMessage('You', userInput, 'user');

            const botResponse = await sendMessageToServer(userInput);
            appendMessage('Bot', botResponse, 'ai');

            document.getElementById('user-input').value = '';
        }

        document.getElementById('send-btn').addEventListener('click', handleUserInput);
        document.getElementById('user-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                handleUserInput();
            }
        });

        document.querySelectorAll('.star').forEach(star => {
            star.addEventListener('click', function() {
                let rating = this.getAttribute('data-value');
                alert('You rated this website ' + rating + ' stars!');
            });
        });
    </script>

</body>

</html>