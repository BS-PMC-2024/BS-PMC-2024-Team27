<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users</title>
    <style>
        /* Global Styles */
        
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
        }
        
        body {
            /* font-size: 16px; */
            background-color: #001f3f;
            background: linear-gradient(to bottom right, #001f3f, #5bb2e1);
            /* display: flex; */
            flex-direction: column;
        }
        
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }
        /* Navbar Styles */
        
        .navbar {
            background-color: #333;
            overflow: hidden;
            padding: 10px 0;
        }
        
        .navbar-brand {
            float: left;
            color: #f4f4f4;
            font-size: 24px;
            text-decoration: none;
            padding: 12px 20px;
        }
        
        .navbar-brand:hover {
            background-color: #444;
        }
        
        .profile-button {
            float: right;
            color: #f4f4f4;
            text-decoration: none;
            padding: 10px 20px;
        }
        
        .profile-button:hover {
            background-color: #444;
        }
        /* Page Title */
        
        h1 {
            text-align: center;
            color: #ffffff;
            margin-top: 20px;
        }
        /* Table Styles */
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }
        
        th,
        td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }
        
        th {
            background-color: #333;
            color: #fff;
            text-transform: uppercase;
        }
        
        tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }
        
        tbody tr:nth-child(even) {
            background-color: #ffffff;
        }
        
        tbody tr:hover {
            background-color: #e9ecef;
        }
        /* Dropdown Style */
        
        .filter-dropdown {
            margin-bottom: 5px;
            width: 100%;
            max-width: 200px;
            padding: 10px;
            font-size: 16px;
        }
        /* Button Style */
        
        .apply-button {
            background-color: #3b5f85;
            color: #fff;
            border: none;
            padding: 12px 10px;
            cursor: pointer;
            border-radius: 3px;
        }
        
        .apply-button:hover {
            background-color: #004494;
        }
        
        .delete-button {
            background-color: #e74c3c;
            color: #fff;
            border: none;
            padding: 6px 15px;
            cursor: pointer;
            border-radius: 3px;
            font-size: 16px;
        }
        
        .delete-button:hover {
            background-color: #c0392b;
        }
        /* Container for Search and Filter */
        
        .search-filter-container {
            display: flex;
            align-items: center;
            gap: 10px;
            /* Space between elements */
            margin-bottom: 10px;
        }
        
        .search-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .search-input {
            padding: 10px;
            font-size: 16px;
            max-width: 170px;
            border: 1px solid #ccc;
            border-radius: 0px;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <a href="#" class="navbar-brand">Code Partner</a>
        <a href="Freelancer-Profile" class="profile-button">Profile</a>
    </div>
    <div class="container">
        <h1>All Projects</h1>

        <!-- Search and Filter Container -->
        <div class="search-filter-container">
            <!-- Search Input -->
            <div class="search-container">
                <input type="text" id="searchInput" class="search-input" placeholder="Search projects...">
                <button class="apply-button" onclick="searchProjects()">Search</button>
            </div>

            <!-- Filter Dropdown -->
            <select id="filterDropdown" class="filter-dropdown">
                <option value="all">Show All</option>
                <% users.forEach(user => { %>
                    <option value="<%= user.Projectname2 %>"><%= user.Projectname2 %></option>
                <% }); %>
            </select>
            <button class="apply-button" onclick="applyFilter()">Apply Filter</button>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Issue</th>
                    <th>Description</th>
                    <th>Child Issue</th>
                    <th>Priority</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody id="userTableBody">
                <!-- Example of dynamic data with server-side templating -->
                <!-- Replace <%= %> with actual template tags used in your server-side framework -->
                <% users.forEach(user => { %>
                    <tr>
                        <td>
                            <%= user.Projectname2 %>
                        </td>
                        <td>
                            <%= user.Issue2 %>
                        </td>
                        <td>
                            <%= user.Description2 %>
                        </td>
                        <td>
                            <%= user.Childissue2 %>
                        </td>
                        <td>
                            <%= user.Priorety2 %>
                        </td>
                        <td><button class="delete-button" onclick="deleteMessage('<%=user._id%>')">Delete</button></td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <!-- JavaScript for filtering -->
    <script>
        function setCookie(name, value, days) {
            var expires = "";
            if (days) {
                var date = new Date();
                date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                expires = "; expires=" + date.toUTCString();
            }
            document.cookie = name + "=" + (value || "") + expires + "; path=/";
        }

        function getCookie(name) {
            var nameEQ = name + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) === ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) === 0) return c.substring(nameEQ.length, c.length);
            }
            return null;
        }

        function applyFilter() {
            var filter = document.getElementById('filterDropdown').value;
            setCookie('filter', filter, 7); // Save filter to cookie for 7 days
            var rows = document.getElementById("userTableBody").getElementsByTagName("tr");

            for (var i = 0; i < rows.length; i++) {
                var projectName = rows[i].getElementsByTagName("td")[0].innerText.toLowerCase();
                if (filter === 'all') {
                    rows[i].style.display = "";
                } else if (projectName !== filter) {
                    rows[i].style.display = "none";
                } else {
                    rows[i].style.display = "";
                }
            }
        }

        function applySavedFilter() {
            var savedFilter = getCookie('filter');
            if (savedFilter) {
                document.getElementById('filterDropdown').value = savedFilter;
                applyFilter();
            }
        }

        function deleteRow(button) {
            var row = button.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }

        function searchProjects() {
            var searchQuery = document.getElementById('searchInput').value.toLowerCase();
            var rows = document.getElementById("userTableBody").getElementsByTagName("tr");

            for (var i = 0; i < rows.length; i++) {
                var projectName = rows[i].getElementsByTagName("td")[0].innerText.toLowerCase();
                var issue = rows[i].getElementsByTagName("td")[1].innerText.toLowerCase();
                var description = rows[i].getElementsByTagName("td")[2].innerText.toLowerCase();
                var childIssue = rows[i].getElementsByTagName("td")[3].innerText.toLowerCase();
                var priority = rows[i].getElementsByTagName("td")[4].innerText.toLowerCase();

                if (projectName.includes(searchQuery) || issue.includes(searchQuery) || description.includes(searchQuery) || childIssue.includes(searchQuery) || priority.includes(searchQuery)) {
                    rows[i].style.display = "";
                } else {
                    rows[i].style.display = "none";
                }
            }
        }
        function deleteMessage(id) {
            fetch(`/delete-message15/${id}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting message');
                    }
                });
        }

        window.onload = applySavedFilter;
    </script>
</body>

</html>